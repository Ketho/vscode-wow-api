{
	"name": "wow-api",
	"displayName": "WoW API",
	"description": "World of Warcraft API",
	"version": "0.7.1",
	"publisher": "Ketho",
	"repository": {
		"type": "git",
		"url": "https://github.com/Ketho/vscode-wow-api.git"
	},
	"license": "MIT",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Linters",
		"Programming Languages"
	],
	"keywords": [
		"Lua",
		"WoW",
		"World of Warcraft"
	],
	"icon": "img/wow-logo.png",
	"activationEvents": [
		"onLanguage:lua"
	],
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "^16.10.2",
		"@types/vscode": "^1.60.0",
		"@typescript-eslint/eslint-plugin": "^4.33.0",
		"@typescript-eslint/parser": "^4.33.0",
		"eslint": "^7.32.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.2",
		"typescript": "^4.4.3",
		"vscode-test": "^1.6.1"
	},
	"extensionDependencies": [
		"sumneko.lua"
	],
	"contributes": {
		"configuration": {
			"title": "WoW API",
			"properties": {
				"wowAPI.emmyLua.loadFrameXML": {
					"type": "boolean",
					"default": true,
					"markdownDescription": "Load manually updated documentation for [FrameXML](https://github.com/Ketho/vscode-wow-api/tree/master/EmmyLua/Optional) globals and functions."
				}
			}
		}
	}
}
