{
	"name": "wow-api",
	"displayName": "WoW API",
	"description": "World of Warcraft API",
	"version": "0.9.11",
	"publisher": "Ketho",
	"repository": {
		"type": "git",
		"url": "https://github.com/Ketho/vscode-wow-api.git"
	},
	"license": "MIT",
	"engines": {
		"vscode": "^1.91.0"
	},
	"categories": [
		"Linters",
		"Programming Languages"
	],
	"keywords": [
		"Lua",
		"WoW",
		"World of Warcraft"
	],
	"icon": "img/wow-logo.png",
	"activationEvents": [
		"onLanguage:lua"
	],
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.91.0",
		"@types/mocha": "^10.0.7",
		"@types/node": "20.x",
		"@typescript-eslint/eslint-plugin": "^7.14.1",
		"@typescript-eslint/parser": "^7.11.0",
		"eslint": "^8.57.0",
		"typescript": "^5.4.5",
		"@vscode/test-cli": "^0.0.9",
		"@vscode/test-electron": "^2.4.0"
	},
	"extensionDependencies": [
		"sumneko.lua"
	],
	"contributes": {
		"configuration": {
			"title": "WoW API",
			"properties": {
				"wowAPI.locale": {
					"type": "string",
					"default": "enUS",
					"enum": ["enUS", "deDE", "esES", "esMX", "frFR", "itIT", "koKR", "ptBR", "ruRU", "zhCN", "zhTW"],
					"markdownDescription": "Sets the GlobalStrings locale for code completion and hover."
				},
				"wowAPI.autoAddGlobals": {
					"type": "boolean",
					"default": true,
					"markdownDescription": "Automatically add known WoW globals to `Lua.diagnostics.globals`."
				}
			}
		}
	}
}
