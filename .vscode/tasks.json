// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Lua main",
			"type": "shell",
			"command": "source .lua/bin/activate && lua LuaScripts/main.lua",
			"presentation": {
				"showReuseMessage": false,
				"clear": true
			},
			"problemMatcher": []
		},
		{
			"label": "Lua parseWiki",
			"type": "shell",
			"command": "source .lua/bin/activate && lua LuaScripts/parseWiki.lua",
			"presentation": {
				"showReuseMessage": false,
				"clear": true
			},
			"problemMatcher": []
		},
		{
			"label": "Sync wowdoc",
			"type": "shell",
			"command": "rsync -av --delete wowdoc/ ~/WowDoc/wowdoc/",
			"presentation": {"showReuseMessage": false, "clear": true},
			"problemMatcher": []
		}
	]
}
